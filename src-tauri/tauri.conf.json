{
    "build": {
        "beforeBuildCommand": "npm run vite:build",
        "beforeDevCommand": "npm run vite:dev",
        "devPath": "http://localhost:1420",
        "distDir": "../build",
        "withGlobalTauri": false
    },
    "package": {
        "productName": "Soundcheck",
        "version": "0.1.0"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "os": {
                "all": true
            },
            "clipboard": {
                "writeText": true
            },
            "window": {
                "close": true,
                "create": true,
                "setAlwaysOnTop": true,
                "startDragging": true
            }
        },
        "bundle": {
            "active": true,
            "category": "Music",
            "icon": [
                "./icons/32x32.png",
                "./icons/128x128.png",
                "./icons/128x128@2x.png",
                "./icons/icon.icns",
                "./icons/icon.ico"
            ],
            "identifier": "Soundcheck",
            "targets": "all"
        },
        "security": {
            "csp": null
        },
        "windows": [
            {
                "decorations": false,
                "fullscreen": false,
                "label": "player",
                "minHeight": 60,
                "minWidth": 135,
                "height": 140,
                "width": 140,
                "resizable": true,
                "title": "Soundcheck"
            }
        ]
    }
}
