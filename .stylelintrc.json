{
    "extends": ["stylelint-config-standard", "stylelint-config-idiomatic-order", "stylelint-config-html/svelte"],
    "rules": {
        "custom-property-pattern": "^_?([a-z][a-z0-9]*)(-[a-z0-9]+)*$",
        "selector-pseudo-class-no-unknown": [
            true,
            {
                "ignorePseudoClasses": ["global"]
            }
        ]
    }
}
